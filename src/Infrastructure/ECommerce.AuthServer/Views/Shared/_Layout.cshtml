<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerce.AuthServer</title>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerce.AuthServer.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="bg-white border-b border-gray-200 shadow-sm mb-6">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a class="text-xl font-semibold text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">
                            ECommerce.AuthServer
                        </a>
                    </div>
                    <div class="flex items-center space-x-4">
                        <a class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors" 
                           asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-colors" 
                           asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <main role="main" class="pb-12">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 bg-gray-50 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <p class="text-center text-sm text-gray-500">
                &copy; 2025 - ECommerce.AuthServer - 
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-blue-600 hover:text-blue-500">Privacy</a>
            </p>
        </div>
    </footer>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
