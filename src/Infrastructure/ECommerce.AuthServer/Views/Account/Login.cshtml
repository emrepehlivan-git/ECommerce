@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900">@ViewData["Title"]</h2>
            <p class="mt-2 text-sm text-gray-600">Log in to your account</p>
        </div>
        
        <form asp-controller="Account" asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]" class="space-y-6">
            <input type="hidden" name="scope" value="openid email profile roles" />
            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="All" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg"></div>
            }
            
            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="Email" class="input-field" placeholder="example@example.com" />
                <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
            </div>
            
            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="Password" class="input-field" placeholder="**************" />
                <span asp-validation-for="Password" class="text-red-500 text-sm mt-1 block"></span>
            </div>
            
            <div class="flex items-center">
                <input asp-for="RememberMe" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-900"></label>
            </div>
            
            <div>
                <button type="submit" class="btn-primary w-full">
                    Log in
                </button>
            </div>
        </form>
        
        <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">
                Don&apos;t have an account? 
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" 
                   class="font-medium text-blue-600 hover:text-blue-500 transition-colors">
                    Register
                </a>
            </p>
        </div>
    </div>
</div> 