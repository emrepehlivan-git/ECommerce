@{
    ViewData["Title"] = "E-posta Gönderildi";
    Layout = "_AuthLayout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-lg w-full">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <div class="px-6 py-4 text-center">
                <h2 class="text-2xl font-bold flex items-center justify-center">
                    <i class="fas fa-check-circle mr-2"></i>
                    E-posta Gönderildi
                </h2>
            </div>

            <div class="px-6 py-8 text-center">
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                    <div class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 mt-1 mr-3"></i>
                        <div class="text-left">
                            <p class="font-semibold text-blue-900 mb-1">E-posta kutunuzu kontrol edin</p>
                            <p class="text-blue-700 text-sm">
                                Size şifre sıfırlama bağlantısı içeren bir e-posta gönderdik.
                                E-postadaki bağlantıya tıklayarak şifrenizi sıfırlayabilirsiniz.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
                    <div class="flex items-center justify-center">
                        <i class="fas fa-clock text-yellow-600 mr-2"></i>
                        <span class="text-yellow-800 text-sm font-medium">Bu bağlantı 30 dakika boyunca geçerlidir.</span>
                    </div>
                </div>
                
                <div class="mb-6">
                    <p class="text-gray-600 text-sm">
                        E-posta gelmedi mi? Spam klasörünü kontrol etmeyi unutmayın.
                    </p>
                </div>
                
                <div class="border-t border-gray-200 pt-6">
                    <div class="flex flex-col gap-2">
                        <a asp-action="Login" class="px-4 py-2 bg-blue-600 text-white w-full rounded-md">
                            <i class="fas fa-sign-in-alt mr-2"></i>
                            Giriş Sayfasına Dön
                        </a>
                        <a asp-action="ForgotPassword" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                            <i class="fas fa-redo mr-2"></i>
                            Tekrar Gönder
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 