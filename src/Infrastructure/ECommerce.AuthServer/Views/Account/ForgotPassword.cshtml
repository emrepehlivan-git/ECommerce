@model ECommerce.AuthServer.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_AuthLayout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <!-- Header -->
            <div class="px-6 py-4 text-center">
                <h2 class="text-2xl font-bold flex items-center justify-center">
                    <i class="fas fa-key mr-2"></i>
                    Şifremi Unuttum
                </h2>
            </div>

            <!-- Body -->
            <div class="px-6 py-8">
                <p class="text-gray-600 text-sm mb-6 text-center">
                    E-posta adresinizi girin, size şifre sıfırlama bağlantısı gönderelim.
                </p>
                
                <form asp-action="ForgotPassword" method="post" class="space-y-6">
                    <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg text-sm"></div>
                    
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-envelope mr-1"></i>
                            @Html.DisplayNameFor(m => m.Email)
                        </label>
                        <input asp-for="Email" 
                               class="input-field" 
                               placeholder="ornek@email.com" />
                        <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    
                    <div>
                        <button type="submit" class="px-4 py-2 bg-blue-600 text-white w-full rounded-md">
                            <i class="fas fa-paper-plane mr-2"></i>
                            Sıfırlama Bağlantısı Gönder
                        </button>
                    </div>
                </form>
                
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <div class="text-center">
                        <a asp-action="Login" class="text-blue-600 hover:text-blue-500 text-sm font-medium transition-colors flex items-center justify-center">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Giriş Sayfasına Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 