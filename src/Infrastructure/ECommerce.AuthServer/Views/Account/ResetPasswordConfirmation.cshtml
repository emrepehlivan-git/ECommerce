@{
    ViewData["Title"] = "Şifre Başarıyla Sıfırlandı";
    Layout = "_AuthLayout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-lg w-full">
        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
            <!-- Header -->
            <div class="bg-green-600 px-6 py-4 text-center">
                <h2 class="text-2xl font-bold text-white flex items-center justify-center">
                    <i class="fas fa-check-circle mr-2"></i>
                    Başarılı!
                </h2>
            </div>

            <!-- Body -->
            <div class="px-6 py-8 text-center">
                <div class="mb-8">
                    <i class="fas fa-shield-alt text-6xl text-green-500 mb-4"></i>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                        Şifreniz başarıyla sıfırlandı!
                    </h3>
                </div>
                
                <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                    <div class="flex items-start">
                        <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                        <div class="text-left">
                            <p class="font-semibold text-green-900 mb-1">Tebrikler!</p>
                            <p class="text-green-700 text-sm">
                                Şifreniz başarıyla değiştirildi. Artık yeni şifrenizle giriş yapabilirsiniz.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                    <div class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 mt-1 mr-3"></i>
                        <p class="text-blue-700 text-sm text-left">
                            Güvenliğiniz için şifrenizi düzenli olarak değiştirmenizi öneririz.
                        </p>
                    </div>
                </div>
                
                <div class="border-t border-gray-200 pt-6">
                    <div class="mb-6">
                        <a asp-action="Login" class="w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
                            <i class="fas fa-sign-in-alt mr-2"></i>
                            Şimdi Giriş Yap
                        </a>
                    </div>
                    
                    <div class="flex items-center justify-center text-gray-500 text-sm">
                        <i class="fas fa-lock mr-2"></i>
                        <span>Hesabınız güvende. Şifreniz şifreli olarak saklanmaktadır.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 